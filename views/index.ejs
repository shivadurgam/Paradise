<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="css/agency.css">
    <style>
      .edit {
        display: none;
      }
    </style>
  </head>
  <body>
    <h1>Welcome!</h1>
    <h3 style="text-align:right"><a href="/">Back to Home</a></h3>
    <div class="container">
      	Now the time is:  <%= Date() %>
 		<table class="table table-bordered">
   			<tr>
        			<th>Id</th>
        			<th>First Name</th>
        			<th>Last Name</th>
              <th></th>
              <th></th>
        </tr>
        <% items.forEach(function(item,index){ %>
        <tr>
        		 			<td><%= item.id %> </td>

        		 			<td><%= item.firstName %></td>

        		 			<td><%= item.lastName %></td>

                  <td><a href="/edit/<%= index %>">Edit </a></td>
                  <td><a href="/delete/<%= index %>" onclick="alert('The item will be deleted')">Delete</a></td>
        </tr>
        <% }) %>
      </table>
      	<br />

      	<form action='/add' method="post">
      		First Name: <input type="text" name="newItemFirstName"><br /><br />
      		Last Name:  <input type="text" name="newItemLastName" ><br /><br />
      		<input type="submit">
      	</form>
    </div>
    <script>
      function edit(){
        $('.show').hide()
        $('.edit').show()
      }
    </script>
  </body>
</html>
